<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="i.am.eipeks.tic_tac_toe.Home">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/game_result"
        android:textSize="17sp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:id="@+id/game_result"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/game_result"
        android:text="@string/restart"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:id="@+id/restart_game"
        android:textStyle="normal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/restart_game"
        android:layout_below="@id/turn_text"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:weightSum="3"
            style="?buttonBarStyle"
            android:padding="5dp"
            android:id="@+id/group_one">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="?buttonBarButtonStyle"
                android:background="@drawable/button_background"
                android:layout_margin="5dp"
                android:text="@string/x_text"
                android:textColor="@android:color/white"
                android:textSize="50sp"
                android:id="@+id/row0_column0"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="?buttonBarButtonStyle"
                android:background="@drawable/button_background"
                android:layout_margin="5dp"
                android:text="@string/x_text"
                android:textColor="@android:color/white"
                android:textSize="50sp"
                android:id="@+id/row0_column1"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="?buttonBarButtonStyle"
                android:background="@drawable/button_background"
                android:layout_margin="5dp"
                android:text="@string/x_text"
                android:textColor="@android:color/white"
                android:textSize="50sp"
                android:id="@+id/row0_column2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:weightSum="3"
            style="?buttonBarStyle"
            android:padding="5dp"
            android:id="@+id/group_two"
            android:layout_below="@id/group_one">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="?buttonBarButtonStyle"
                android:background="@drawable/button_background"
                android:layout_margin="5dp"
                android:textColor="@android:color/white"
                android:textSize="50sp"
                android:id="@+id/row1_column0"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="?buttonBarButtonStyle"
                android:background="@drawable/button_background"
                android:layout_margin="5dp"
                android:textColor="@android:color/white"
                android:textSize="50sp"
                android:id="@+id/row1_column1"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="?buttonBarButtonStyle"
                android:background="@drawable/button_background"
                android:layout_margin="5dp"
                android:textColor="@android:color/white"
                android:textSize="50sp"
                android:id="@+id/row1_column2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:weightSum="3"
            style="?buttonBarStyle"
            android:padding="5dp"
            android:id="@+id/group_three"
            android:layout_below="@id/group_two">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="?buttonBarButtonStyle"
                android:background="@drawable/button_background"
                android:layout_margin="5dp"
                android:text="@string/zero_text"
                android:textColor="@android:color/white"
                android:textSize="50sp"
                android:id="@+id/row2_column0"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="?buttonBarButtonStyle"
                android:background="@drawable/button_background"
                android:layout_margin="5dp"
                android:text="@string/zero_text"
                android:textColor="@android:color/white"
                android:textSize="50sp"
                android:id="@+id/row2_column1"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="?buttonBarButtonStyle"
                android:background="@drawable/button_background"
                android:layout_margin="5dp"
                android:text="@string/zero_text"
                android:textColor="@android:color/white"
                android:textSize="50sp"
                android:id="@+id/row2_column2"/>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/turn_text"
        android:text="@string/player_1_turn"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
